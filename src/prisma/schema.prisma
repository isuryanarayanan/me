generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  password      String?    // Add the password field
  emailVerified DateTime?
  image         String?
  role          String     @default("admin")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  posts         BlogPost[] // Add the relation to BlogPost
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  published Boolean  @default(false)
  cells     Json     // array of BlogCell objects
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String   // Add the foreign key
  author    User     @relation(fields: [authorId], references: [id]) // Add the relation to User
}
