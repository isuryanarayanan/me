generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  password      String?
  emailVerified DateTime?
  image         String?
  role          String     @default("admin")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  posts         BlogPost[]
  projects      Project[]  // Add the relation field
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  published Boolean  @default(false)
  cells     String   // Stored as JSON
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Project {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String
  published    Boolean  @default(false)
  cells        String   // Stored as JSON
  imageUrl     String?
  demoUrl      String?
  sourceUrl    String?
  technologies String   // Store as JSON string
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  author       User     @relation(fields: [authorId], references: [id])
  authorId     String
}
